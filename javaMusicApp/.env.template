# Copy this file to `.env` in the same directory and fill in the actual values.
# DO NOT COMMIT the real `.env` file to version control.

# Postgres DB credentials
POSTGRES_DB=mydb
POSTGRES_USER=myuser
POSTGRES_PASSWORD=<your_postgres_password>

# Spring datasource
# These are typically the same as the Postgres credentials above.
SPRING_DATASOURCE_URL=jdbc:postgresql://db:5432/mydb
SPRING_DATASOURCE_USERNAME=myuser
SPRING_DATASOURCE_PASSWORD=<your_postgres_password>

# Application settings
SPRING_PROFILES_ACTIVE=production
SERVER_PORT=8088
JAVA_OPTS=-Xms512m -Xmx1g

# Security
# A strong, unique secret for signing JWTs
JWT_SECRET=<your_strong_jwt_secret>

# Email settings for your SMTP server
SPRING_MAIL_USERNAME=<your_smtp_username>
SPRING_MAIL_PASSWORD=<your_smtp_password>

# Frontend URL (for CORS and email links)
APP_FRONTEND_URL=http://localhost:3000

# Comma-separated list of allowed frontend origins for CORS (example: localhost + production domain)
# This maps to Spring property `app.frontend.origins` via environment variable `APP_FRONTEND_ORIGINS`.
# Default used by the app: http://localhost:3000,https://example.com
APP_FRONTEND_ORIGINS=http://localhost:3000,https://example.com

# Optional: override image tag
# APP_IMAGE_TAG=latest